                  <p class="checkbox col-6">
                    <label id="bordes" for="">Plataforma</label><br>
                    <input  type="radio" name="plataform" checked="checked" value="Windows">Windows <br>
                    <input  type="radio" name="plataform" value="Mac">Mac <br>
                    <input  type="radio" name="plataform" value="Play Station">Play Station <br>
                    <input  type="radio" name="plataform" value="Xbox">Xbox <br>
                    <input  type="radio" name="plataform" value="Nintendo">Nintendo <br>
                    <input  type="radio" name="plataform" value="IOS">IOS <br>
                    <input  type="radio" name="plataform" value="Android">Android <br>
                    <input  type="radio" name="plataform" value="Wii">Wii
                  </p>
                  <p class="checkbox col-6">
                    <label id="bordes" for="">Categorias</label><br>
                    <input  type="radio" name="category" value="Accion">Accion <br>
                    <input  type="radio" name="category" value="Aventura">Aventura <br>
                    <input  type="radio" name="category" value="Terror">Terror <br>
                    <input  type="radio" name="category" value="Carrera">Carrera <br>
                    <input  type="radio" name="category" value="Estrategia">Estrategia <br>
                    <input  type="radio" name="category" value="RPG">RPG <br>
                    <input  type="radio" name="category" value="Shooter">Shooter <br>
                    <input  type="radio" name="category" value="Simuladores">Simuladores <br>
                    <input  type="radio" name="category" checked="checked" value="Otros">Otros <br>
                    
                  </p>
                </div>
                <p>
                  <label id="titulo" for="">Requisitos</label><br>
                  <p>
                    <p class="req">
                      <label id="titulo">Procesador:</label>
                      <input class="procesador" id="pro" type="text" name="procesador">
                    </p>
                    <p class="req">
                      <label id="titulo">Descuento:</label>
                      <input class="procesador"  type="text" name="discount">
                    </p>
                    <p class="req">
                      <label id="titulo">Memoria:</label>
                    <input class="procesador" id="memoria" type="text" name="memoria">
                  </p>
                    <p class="req">
                      <label id="titulo">Tarjeta Grafica:</label>
                    <input class="procesador" id="graficos" type="text" name="graficos">
                  </p>
                    <p class="req">
                      <label id="titulo">Disco Duro:</label>
                    <input class="procesador" id="disco" type="text" name="pesogb">
                  </p>
                  </p>
                </p>
              </div>
            </div>
            <div class="itemB3 col-12">
              <p>
                <label id="titulo" class="subitemB3" for="Trailer">Agregar URL del Trailer</label> <br>
                <input id="trailer" class="col-12" type="url" name="trailer">
              </p>
              <p>
                <label id="titulo" class="subitemB3" for="Resumen">Resumen</label><br>
                <textarea id="resumen" class="CuadrodeTexto col-12" name="description"></textarea>
              </p>
              <div>
                <p>
                  <input id="bordes" type="submit" value="Cargar">
                  <input id="bordes" type="reset" value="Reiniciar">
                </p>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <%- include("partials/footer") %>
    <script src="/js/script-productAdd.js"></script>
