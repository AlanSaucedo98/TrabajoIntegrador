          <h4 class="Carga">
            <%- title %>
          </h4>
          <form id="FormularioB" class="formuB col-12" action="" method="POST" enctype="multipart/form-data">
            <div id="erro" class="errores">
              <ul class="errorlist"></ul>
            </div>
            <div class="itemB2 row">
              <div class="ColumnaB1 col-12 col-sm-6 ">
                <p>
                  <label id="titulo" for="Nombre">Nombre</label>
                  <input id="nombreP" type="text" name="name">
                </p>
                <div>
                  <label id="titulo" for="">Caratula</label>
                  <input id="file1" type="file" value="" name="image"><br>
                  <label id="titulo" for="">Img 1</label>
                  <input id="file2" type="file" value="" name="imagedet1"><br>
                  <label id="titulo" for="">Img 2</label>
                  <input id="file3" type="file" value="" name="imagedet2"><br>
                  <label id="titulo" for="">Img 3</label>
                  <input id="file4" type="file" value="" name="imagedet3"><br>
                  <label id="titulo" for="">Img 4</label>
                  <input id="file5" type="file" value="" name="imagedet4">
                </div>
