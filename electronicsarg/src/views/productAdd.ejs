                <p class="ColumnaText">
                  <label id="titulo" for="">Idiomas</label><br>
                  <input id="idiomas" class="ColumnaText" type="text" name="idioma" value="">
                </p>
                <p class="ColumnaText">
                  <label id="titulo" for="">Desarrollador</label><br>
                  <input id="desarrollador" class="ColumnaText" type="text" name="desarrollador" value="">
                </p>
                
              </div>
              <div class="ColumnaB2 col-12 col-sm-6">
                <p>
                  <label id="titulo" for="Precio">Precio</label>
                  <input id="precioP" type="text" name="price">
                </p>
