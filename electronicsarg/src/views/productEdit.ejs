        <div class="itemB col-12">
          <h4 class="Carga">
            <%- title %>
          </h4>
          <form id="FormularioB" class="formuB col-12" action="/editar/<%= producto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div id="erro" class="errores">
              <ul class="errorlist"></ul>
            </div>
            <div class="itemB2 row">
              <div class="ColumnaB1 col-12 col-sm-6 ">
                <p>
                  <label id="titulo" for="Nombre">Nombre</label>
                  <input id="nombreP" type="text" name="name" value="<%=producto.nombre%>">
                </p>
                <div>

                  
                <label id="titulo" for="">Caratula</label>
                <img src="/images/products/<%= producto.imagen_portada %> " alt="" class="img-fluid fileimg">
                <input id="file" type="file" value="" name="image"><br>
                <label id="titulo" for="">Img 1</label>
                <img src="/images/products/<%= producto.imagen1 %> " alt="" class="img-fluid fileimg">
                <input id="file" type="file" value="<%= producto.imagen1 %>" name="imagedet1"><br>
                <label id="titulo" for="">Img 2</label>
                <img src="/images/products/<%= producto.imagen2 %> " alt="" class="img-fluid fileimg">
                <input id="file" type="file" value="" name="imagedet2"><br>
                <label id="titulo" for="">Img 3</label>
                <img src="/images/products/<%= producto.imagen3 %> " alt="" class="img-fluid fileimg">
                <input id="file" type="file" value="" name="imagedet3"><br>
                <label id="titulo" for="">Img 4</label>
                <img src="/images/products/<%= producto.imagen4 %> " alt="" class="img-fluid fileimg">
                <input id="file" type="file" value="" name="imagedet4">
                </div>
                <p class="ColumnaText">
                  <label id="titulo" for="">Fecha de Estreno</label><br>
                  <input id="datebirth" class="ColumnaText" type="date" name="data" value="<%=producto.data%>">
                </p>
                <p class="ColumnaText">
                  <label id="titulo" for="">Idiomas</label><br>
                  <input id="idiomas" class="ColumnaText" type="text" name="idioma" value="<%=producto.idioma%>">
                </p>
                <p class="ColumnaText">
                  <label id="titulo" for="">Desarrollador</label><br>
                  <input id="desarrollador" class="ColumnaText" type="text" name="desarrollador" value="<%=producto.desarrollador%>">
                </p>
                
              </div>
              <div class="ColumnaB2 col-12 col-sm-6">
                <p>
                  <label id="titulo" for="Precio">Precio</label>
                  <input id="precioP" type="text" name="price" value="<%=producto.precio%>">
                </p>
                <div class="check col-12">
                  <p class="checkbox col-6">
                    <label id="bordes" for="">Plataforma</label><br>
                    <input type="radio" name="plataform" checked="checked" value="Windows">Windows <br>
                    <input type="radio" name="plataform" value="Mac">Mac <br>
                    <input type="radio" name="plataform" value="Play Station">Play Station <br>
                    <input type="radio" name="plataform" value="Xbox">Xbox <br>
                    <input type="radio" name="plataform" value="Nintendo">Nintendo <br>
                    <input type="radio" name="plataform" value="IOS">IOS <br>
                    <input type="radio" name="plataform" value="Android">Android <br>
                    <input type="radio" name="plataform" value="Wii">Wii
                  </p>
                  <p class="checkbox col-6">
                    <label id="bordes" for="">Categorias</label><br>
                    <input type="radio" name="category" value="Accion">Accion <br>
                    <input type="radio" name="category" value="Aventura">Aventura <br>
                    <input type="radio" name="category" value="Deporte">Deporte <br>
                    <input type="radio" name="category" value="Carrera">Carrera <br>
                    <input type="radio" name="category" value="Estrategia">Estrategia <br>
                    <input type="radio" name="category" value="RPG">RPG <br>
                    <input type="radio" name="category" value="Shooter">Shooter <br>
                    <input type="radio" name="category" value="Simuladores">Simuladores <br>
                    <input type="radio" name="category" checked="checked" value="Otros">Otros <br>
                    
                  </p>
                </div>
                <p>
                  <label id="titulo" for="">Requisitos</label><br>
                  <p>
                    <p class="req">
                      <label id="titulo">Procesador:</label>
                      <input id="pro" type="text" name="procesador" value="<%=producto.procesador%>">
                    </p>
                    <p class="req">
                      <label id="titulo">Descuento:</label>
                      <input id="descuento" type="text" name="discount">
                    </p>
                    <p class="req">
                      <label id="titulo">Memoria:</label>
                    <input id="memoria" type="text" name="memoria" value="<%=producto.memoria%>">
                  </p>
                    <p class="req">
                      <label id="titulo">Tarjeta Grafica:</label>
                    <input id="graficos" type="text" name="graficos" value="<%=producto.graficos%>">
                  </p>
                    <p class="req">
                      <label id="titulo">Disco Duro:</label>
                    <input id="disco" type="text" name="pesogb" value="<%=producto.pesogb%>">
                  </p>
                  </p>
                </p>
              </div>
