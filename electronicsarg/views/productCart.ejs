    <link rel="stylesheet" href="style.css">
  </head>
<body>

  <!-- HEADER -->

  <header>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 recursos"> 
          <div><a href="">Servicio Tecnico</a></div>
          <div><a href="">Envio</a></div>
          <div><a href="">Sucursales</a></div>
          <div><a href="">Contacto</a></div>
        </div>
      </div>
      <div class="row">
        <div class=" col-1 col-md-2 logo">
          <a href=""><img src="/images/logosinfondo.png" alt=""></a>
        </div>
          <div class="col-10 col-md-7 buscador">
            <form action="">
              <input type="text" placeholder="Buscar productos, marcas y más ...">
              <button type="submit"><i class="fas fa-search"></i></button>
            </form>
            </div>
          <div class=" col-1  col-md-2 botonlogin">
          <button type="button" class="btn btn-secondary">LOGIN</button>
          </div>
      </div>
          
         <div class="col-12 col-md-12 col-lg-12 nav">
          <nav class="navbar-expand-md">
            <button class="navbar-toggler burger" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fas fa-bars "></i></button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" >
            <ul class="menu navbar-nav mr-auto">
                <li class="nav-item active">
                  <ul>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Categorias
                      </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">TERROR</a>
                        <a class="dropdown-item" href="#">RPG</a>
                        <a class="dropdown-item" href="#">INFANTILES</a>
                      </div>
                    </li>
                  </ul>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Ofertas</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Historial</a>
                </li>
                
              </ul>
              <li class="logoshome">
                <i class="fas fa-user-cog"></i>
                <i class="fas fa-shopping-cart"></i>
                
              </li>
            </div>
            
          </nav>
      </div> 
    
  </header>

  <div class="carro">
    <div class="fondo">
      <div class="row-carro">
        <i class="fas fa-cart-plus"></i> 
          <section class="producto">
            <h3>Carro de Compra</h3>
          </section>
      </div>
        <div class="row">
            <div class="col-12 col-md-6 col-lg-3">
              <div class="detalle">
                <img src="/images/cyberpunk.jpg" alt="" class="img-fluid2">
                  <div class="producto">
                    <div class="plat-price">
                      <h6>CyberPunk</h6>
                      <i class="fab fa-windows"></i>
                      <h5>$4000</h5>
                    </div>
                    <div class="trash">
                      <button class="trash">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-md-6 col-lg-3">
              <div class="detalle">
                <img src="images/the-last-of-us-part-ii.jpg" alt="" class="img-fluid2">
                  <div class="producto">
                    <div class="plat-price">
                      <h6>The Last Of Us II</h6>
                      <i class="fab fa-playstation"></i>
                      <h5>$4000</h5>
                    </div>
                    <div class="trash">
                      <button class="trash">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-md-6 col-lg-3">
              <article class="detalle">
                <img src="/images/terraria-2d-new.jpg" alt="" class="img-fluid2">
                  <div class="producto">
                    <div class="plat-price">
                      <h6>Terraria</h6>
                      <i class="fab fa-windows"></i>
                      <h5>$4000</h5>
                    </div>
                    <div class="trash">
                      <button class="trash">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </div>
                </article>
            </div>
          </div>
          <div class="total">
            <h4>TOTAL:</h4>
            <h4>$12000</h4>
          </div>
  </div>
  </div>


<!-- FOOTER -->
  
  <footer class="container-fluid">
    <div class="row footer">
      
      
      <div class="col-12">
        <article>
          <i class="fas fa-phone-alt"></i>
          <h4>Atención al Cliente</h4>
          <p>0800 111 2222</p>
        </article>
      </div>
      <div class="col-12">
        <article>
          <ul class="redes">
            <i class="fab fa-twitter"></i>
            <i class="fab fa-facebook-square"></i>
            
            <i class="fab fa-apple"></i>
            <i class="fab fa-amazon"></i>
            <i class="fab fa-instagram"></i>
        </ul>
        </article>
      </div>
    </div>
    <div class="col-12 copy">Copyright 2020 Electronics Arg.</div>
